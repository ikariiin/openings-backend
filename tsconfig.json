{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "config.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}